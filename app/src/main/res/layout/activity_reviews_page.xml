<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100"
    tools:context=".ReviewsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="9dp"
        android:layout_weight="1"
        android:weightSum="2">

        <Button
            android:id="@+id/view_review_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/solid_btn_reverse"
            android:text="View All reviews"

            />

        <Button
            android:id="@+id/write_review_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/solid_btn"
            android:text="Write are review"
            android:textColor="#000" />

    </LinearLayout>

        <fragment
        android:id="@+id/review_fragment"
        android:name="com.example.rps.AllReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="93" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/prev_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/solid_btn"
            android:textColor="@color/black"
            android:text="Prev" />

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            android:background="@drawable/solid_btn_reverse"
            android:text="1" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/solid_btn"
            android:textColor="@color/black"
            android:text="Next" />
    </LinearLayout>
</LinearLayout>