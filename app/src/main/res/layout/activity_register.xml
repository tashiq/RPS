<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#fffeee"
        tools:context=".Register"

    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/profile_background"
    >

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/profile"
        android:layout_marginBottom="40dp"
        />


    <LinearLayout
        android:id="@+id/user_name_box"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/input_curve_left"
            android:gravity="center_vertical"
            android:text="User Name"
            android:textColor="#050509"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/register_user_name"
            android:layout_width="200dp"
            android:textSize="13sp"
            android:layout_height="fill_parent"
            android:layout_marginStart="5dp"
            android:background="@drawable/input_curve_right"
            android:gravity="center_vertical"
            android:text="Tashique"
            android:textColor="#050509"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/register_image_container" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_box"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/email_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/input_curve_left"
            android:gravity="center_vertical"
            android:text="Name"
            android:textColor="#050509"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/register_name"
            android:layout_width="200dp"
            android:textSize="13sp"
            android:layout_height="fill_parent"
            android:layout_marginStart="5dp"
            android:background="@drawable/input_curve_right"
            android:gravity="center_vertical"
            android:text="Fahim Foisal"
            android:textColor="#050509" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_box"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/country_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/input_curve_left"
            android:gravity="center_vertical"
            android:text="Email"
            android:textColor="#050509"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/register_email"
            android:layout_width="200dp"
            android:textSize="13sp"
            android:layout_height="fill_parent"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:minLines="1"
            android:layout_marginStart="5dp"
            android:background="@drawable/input_curve_right"
            android:gravity="center_vertical"
            android:text="fahim.csecu@gmail.com"
            android:textColor="#050509" />


    </LinearLayout>
<LinearLayout
    android:layout_marginBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:background="@drawable/input_curve_left"
        android:gravity="center_vertical"
        android:text="Phone"
        android:textColor="#050509"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/register_phone"
        android:layout_width="200dp"
        android:textSize="13sp"
        android:layout_height="fill_parent"
        android:inputType="phone"
        android:maxLines="2"
        android:minLines="1"
        android:layout_marginStart="5dp"
        android:background="@drawable/input_curve_right"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="#050509" />

</LinearLayout>
    <LinearLayout
        android:id="@+id/country_box"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/dob_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/input_curve_left"
            android:gravity="center_vertical"
            android:text="Country"
            android:textColor="#050509"
            android:textSize="13sp" />

        <AutoCompleteTextView
            android:id="@+id/register_country"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_marginStart="5dp"
            android:background="@drawable/input_curve_right"
            android:gravity="center_vertical"
            android:text="Bangladesh"
            android:textColor="#050509"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dob_box"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/input_curve_left"
            android:gravity="center_vertical"
            android:text="Date of birth"
            android:textColor="#050509"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="200dp"
            android:textSize="13sp"
            android:layout_height="fill_parent"
            android:layout_marginStart="5dp"
            android:background="@drawable/input_curve_right"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5"
            android:textColor="#050509"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/register_dob_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="dd/mm/yyyy"
                android:textSize="15sp"
                android:layout_weight="3.5"
                />

            <Button
                android:id="@+id/register_dob_dialog"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:drawableLeft="@drawable/calender"
                android:padding="9dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/password_toggle_box"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/input_curve_left"
            android:gravity="center_vertical"
            android:text="Password"
            android:textColor="#050509"
            android:textSize="13sp" />


            <EditText
                android:id="@+id/register_password"
                android:layout_width="200dp"
                android:textSize="13sp"
                android:inputType="textPassword"
                android:layout_height="fill_parent"
                android:layout_marginStart="5dp"
                android:background="@drawable/input_curve_right"
                android:gravity="center_vertical"
                android:text="Tashique"
                android:textColor="#050509"
                />

    </LinearLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_curve"
        android:text="Register"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end">
        <TextView
            android:id="@+id/login_page_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
