<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDF1E7"
        tools:context=".Login">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/profile_background"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="40dp"
        tools:src="@drawable/navigation_header" />

    <LinearLayout
        android:id="@+id/login_user_name_box"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/input_curve_left"
            android:gravity="center_vertical"
            android:text="User Name"
            android:textColor="#050509"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/login_user_name"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_marginStart="5dp"
            android:background="@drawable/input_curve_right"
            android:gravity="center_vertical"
            android:hint="User_Name"
            android:textColor="#050509"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_box"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:background="@drawable/input_curve_left"
            android:gravity="center_vertical"
            android:text="Password"
            android:textColor="#050509"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_marginStart="5dp"
            android:background="@drawable/input_curve_right"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLines="2"
            android:hint="Password"
            android:minLines="1"
            android:textColor="#050509"
            android:textSize="13sp"
            tools:inputType="textPassword" />


    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_curve"
        android:text="Login"
        android:textAllCaps="false"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:text="New user?. Please register." />
    </LinearLayout>
</LinearLayout>

</LinearLayout>